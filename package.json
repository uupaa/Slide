{
  "name":           "Slide",
  "version":        "0.0.0",
  "description":    "",
  "main":           "",
  "scripts": {
    "watch":            "npm run watch-webmodule",
    "watch-webmodule":  "node node_modules/uupaa.watch.js --verbose --action build-webmodule --delay 1 ./slide/WebModule.md",
    "watch-help":       "node node_modules/uupaa.watch.js --verbose --action build-help --delay 1 ./slide/Help.js.md",
    "watch-task":       "node node_modules/uupaa.watch.js --verbose --action build-task --delay 1 ./slide/Task.js.md",
    "build":            "npm run build-webmodule",
    "build-webmodule":  "pandoc --section-divs -s -t html5 --template ./slide/WebModule/template.html ./slide/WebModule.md -o ./slide/WebModule/index.html",
    "build-help":       "pandoc --section-divs -s -t html5 --template ./slide/Help.js/template.html ./slide/Help.js.md -o ./slide/Help.js/index.html",
    "build-task":       "pandoc --section-divs -s -t html5 --template ./slide/Task.js/template.html ./slide/Task.js.md -o ./slide/Task.js/index.html",
    "show":             "npm run show-webmodule",
    "show-webmodule":   "open ./slide/WebModule/index.html",
    "show-help":        "open ./slide/Help.js/index.html",
    "show-task":        "open ./slide/Task.js/index.html",
    "copy":             "npm run copy-help; npm run copy-task; npm run copy-valid",
    "copy-help":        "cp node_modules/uupaa.help.js/lib/Help.js assets/js/Help.js",
    "copy-task":        "cp node_modules/uupaa.task.js/lib/Task.js assets/js/Task.js",
    "copy-valid":       "cp node_modules/uupaa.valid.js/lib/Valid.js assets/js/Valid.js"
  },
  "dependencies": {
  },
  "devDependencies": {
    "uupaa.valid.js":  "",
    "uupaa.help.js":   "",
    "uupaa.task.js":   "",
    "uupaa.watch.js":  ""
  },
  "repository": {
    "type":         "git",
    "url":          "git://github.com/uupaa/Slide.git"
  },
  "author":         "uupaa <uupaa.js@gmail.com>",
  "license":        "MIT"
}
